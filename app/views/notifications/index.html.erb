
<h1>Listing Activities</h1>

<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>User</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% if @activities %>
      <% @activities.each do |activity| %>
          <tr>
            <td><%= activity.id %></td>
          </tr>
      <% end %>
  <% end %>
  </tbody>
</table>

<br>
